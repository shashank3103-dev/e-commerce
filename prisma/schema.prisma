generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SUBADMIN
  ADMIN
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  role       Role     @default(USER)   // ðŸ‘ˆ must use enum here
  otp        String?
  otpExpires DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}